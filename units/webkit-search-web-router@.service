[Unit]
Description=WebKitSearch Web Router (%i)
Wants=multi-user.target

[Service]
Type=simple
Restart=always
RestartSec=1s
User=%i
Group=%i
WorkingDirectory=/home/%i
RuntimeDirectory=%i
EnvironmentFile=/home/%i/environment

# The router spawns codesearch
ExecStartPre=-pkill codesearch
ExecStartPre=-pkill -f router/router.py

ExecStart=/usr/bin/python /home/%i/${MOZSEARCH}/router/router.py /home/%i/${CONFIG}/config.json /home/%i/${DOCROOT}/status.txt
